<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="saacs.ufc.com.br.saacs.activity.CadastroGrupoFamiliarActivity$PlaceholderFragment2">

    <RadioGroup
        android:id="@+id/radioGroupLocalizacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textViewRins"
        android:layout_toRightOf="@+id/section_label2"
        android:layout_toEndOf="@+id/section_label2"
        android:weightSum="1">

        <RadioButton
            android:text="Urbano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textViewRins"
            android:layout_toEndOf="@+id/textViewRins"
            android:id="@+id/radioButtonLocalizacaoUrbano"
            android:layout_weight="0.48" />

        <RadioButton
            android:text="Rural"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioButtonLocalizacaoUrbano"
            android:layout_toRightOf="@+id/radioButtonLocalizacaoUrbano"
            android:layout_toEndOf="@+id/radioButtonLocalizacaoUrbano"
            android:id="@+id/radioButtonLocalizacaoRural" />

    </RadioGroup>

    <TextView
        android:text="Localização: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRins"
        android:layout_toRightOf="@+id/section_label2"
        android:layout_toEndOf="@+id/section_label2" />

    <TextView
        android:text="Condição Moradia: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroupLocalizacao"
        android:layout_toRightOf="@+id/section_label2"
        android:layout_toEndOf="@+id/section_label2"
        android:id="@+id/textView6" />

    <RadioGroup
        android:id="@+id/radioGroupMoradia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
                android:text="Cedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonMoradiaCedido"
                android:layout_below="@+id/radioButtonMorariaPropria"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        <RadioButton
                android:text="Ocupado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/radioButtonMoradiaCedido"
                android:layout_alignLeft="@+id/radioButtonMoradiaFinanciado"
                android:layout_alignStart="@+id/radioButtonMoradiaFinanciado"
                android:id="@+id/radioButtonMoradiaOcupado" />

        <RadioButton
                android:text="Outro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/radioButtonMoradiaOcupado"
                android:layout_alignLeft="@+id/radioButtonMoradiaAlugado"
                android:layout_alignStart="@+id/radioButtonMoradiaAlugado"
                android:id="@+id/radioButtonMoradiaOutro" />

        <RadioButton
            android:text="Própria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonMorariaPropria"
            android:layout_below="@+id/radioGroup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:text="Financiado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonMoradiaFinanciado"
            android:layout_below="@+id/radioGroup6"
            android:layout_centerHorizontal="true"
            android:layout_weight="1" />

        <RadioButton
                android:text="Alugado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:id="@+id/radioButtonMoradiaAlugado"
            android:layout_below="@+id/radioGroup6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Tipo de Domicílio:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/section_label2"
        android:layout_toEndOf="@+id/section_label2"
        android:layout_marginTop="194dp"
        android:id="@+id/textView7" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroupDomicilio"
        android:orientation="horizontal"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="Casa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/radioButtonDomicilioCasa"
            android:layout_weight="1" />

        <RadioButton
            android:text="Apartamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButtonDomicilioCasa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/radioButtonDomicilioApartamento"
            android:layout_weight="1" />

        <RadioButton
            android:text="Cômodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroupDomicilio"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7"
            android:id="@+id/radioButtonDomicilioComodo"
            android:layout_weight="1" />

        <RadioButton
            android:text="Outro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonDomicilioOutro"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Possui Energia Elétrica?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroupDomicilio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView8" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/section_label2"
        android:layout_toEndOf="@+id/section_label2"
        android:orientation="horizontal"
        android:id="@+id/radioGroupEnergia">

        <RadioButton
            android:text="Sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonEnergiaSim"
            android:layout_weight="1" />

        <RadioButton
            android:text="Não"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonEnergiaNao"
            android:layout_weight="1" />

    </RadioGroup>

    <TextView
        android:text="Possui Saneamento Básico?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_below="@+id/radioGroupEnergia"
        android:layout_weight="1" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroupSaneamento"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <RadioButton
            android:text="Sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonSaneamentoSim"
            android:layout_weight="1" />

        <RadioButton
            android:text="Não"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/radioButtonSaneamentoNao" />
    </RadioGroup>

</RelativeLayout>
